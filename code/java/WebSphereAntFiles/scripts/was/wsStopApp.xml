<project name="wsStopApp" default="WAS_wsStopApp" basedir=".">
	<description>
		Script for stopping an application on the server.

		Required properties:
			was_home    the WAS installation directory
            was_appname       the EAR name (e.g. "fooEAR")
	
	    Optional properties:
	        was_user           user
	        was_password   password
			was_failonerror  stops execution on error
</description>

	<import file="wsClassPath.xml" />
	<import file="dependencyCheck.xml" />

	<target name="WAS_wsStopApp">
		<property name="dep_var" value="was_home" />
		<antcall target="depCheck" />
		<property name="dep_var" value="was_appname" />
		<antcall target="depCheck" />

		<taskdef name="wsStopApp" classname="com.ibm.websphere.ant.tasks.StopApplication" classpath="${was_cp}" />
		<wsStopApp application="${was_appname}" user="${was_user}" password="${was_password}" failonerror="${was_failonerror}" washome="${was_home}" />
	</target>

</project>